<table id="dataTable" style="font-size: 95%" class="table table-striped table-bordered table-hover table-responsive" cellspacing="0">
    <thead>
    <tr>
        <th style="width: 14%;text-align: center"><i class="icon_profile"></i> Nombre de vacuna</th>
        <th style="width: 14%;text-align: center"><i class="icon_cogs"></i> Editar{% if is_granted('ROLE_ESPECIALISTA') %}/Eliminar{% endif %}</th>
    </tr>
    </thead>
    <tbody>
    {% for vacunas in vacuna %}
        <tr>
            <td style="width: 14%;text-align: center">{{ vacunas.nombreVacuna }}</td>
            <td style="width: 14%;text-align: center">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="btn-group">
                            <a href="#Modal-{{ vacunas.id }}" data-toggle="modal" data-placement="top" title="Editar vacuna"><i class="btn btn-facebook fa fa-edit"></i></a>
                            <div aria-hidden="true" aria-labelledby="ModalLabel" role="dialog" tabindex="-1" id="Modal-{{ vacunas.id }}" class="modal fade">
                                <div class="modal-dialog" style="width: 500px; height: auto">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×
                                            </button>
                                            <h4 class="modal-title" style="text-align: center">Modificar Vacuna</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="form-group col-lg-6">
                                                            <label>Nombre de Vacuna</label>
                                                            <input style="text-align: center" name="nombreVacuna{{ vacunas.id }}" dir="{{ vacunas.id }}" type="text" id="vacuna" class="form-control" required="required" value="{{ vacunas.nombreVacuna }}">
                                                        </div>

                                                    </div>
                                                </div>
                                                <br/>
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="form-group col-lg-6" style="text-align: left" >
                                                            <button type="submit" class="btn btn-facebook editar" id="editar{{ vacunas.id }}" dir="{{ vacunas.id }}" >Insertar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a href="#ModalE-{{ vacunas.id }}" dir="{{ vacunas.id }}" data-toggle="modal" data-placement="top" title="Eliminar vacuna"><i class="btn btn-facebook fa fa-trash-o"></i></a>
                            <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="ModalE-{{ vacunas.id }}" class="modal fade">
                                <div class="modal-dialog" style="text-align: center">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                                            <h4 class="modal-title">Eliminar vacuna</h4>
                                        </div>
                                        <div class="alert alert-block alert-danger fade in" style="text-align: center">
                                            <button data-dismiss="alert" class="close close-sm" type="button">
                                                <i class="icon-remove"></i>
                                            </button>
                                            <strong>¿Está seguro que desea eliminar?</strong><br><br>
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-lg-1">
                                                        <input hidden dir="{{ vacunas.id }}" id="idvacuna" name="vacuna{{ vacunas.id }}" type="text" value="{{ vacunas.id }}">
                                                        <button type="submit" class="btn btn-danger eliminar" id="eliminar{{ vacunas.id }}" dir="{{ vacunas.id }}" >Aceptar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<script>
    $(document).ready(function () {
        var t = $('#dataTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                /*'copy', 'csv',*/ 'excel', 'pdf'
            ],
            "bSort" : false,
            "language": {
                "infoFiltered": " - filtering from _MAX_ filas",
                "lengthMenu": "Registros: _MENU_  ",
                "sSearch": "Buscar:",
                "sInfo": "Registros del _START_ al _END_ de un total de _TOTAL_ registros",
                "Info": false,
                "oPaginate": {
                    "sFirst": "Primero",
                    "sLast": "Último",
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior"
                },
            }
        });
    });
</script>
<script>
    $(".editar").click(function(event){
        var enviar = $(this).attr('dir');
        $("#Modal-"+enviar+"").modal('hide');
        var nombre = $('input[name="nombreVacuna'+enviar+'"]').val();
        var path ='{{ path("vacunasEditar", {'id': 'xx','nombre': 'xx'}) }}';
        path = path.replace("xx", enviar);
        path = path.replace("xx", nombre);

        $.ajax({
            url : path,
            data : {},
            type : 'POST',
            dataType : '',
            success : function(data) {
                $('.listarVacuna').html(data);
            },
            error : function(data) {
                alert(data.messageerror);
            },
            complete : function(xhr, status) {
                swal({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Se ha modifico correctamente.',
                    showConfirmButton: false,
                    timer: 1500,
                    type: "success",
                    showCancelButton: false,
                    closeOnConfirm: true
                })
            }
        });
    });
</script>
<script>
    $(".eliminar").click(function(event){
        var enviar = $(this).attr('dir');
        $("#ModalE-"+enviar+"").modal('hide');
        var id = $('input[name="vacuna'+enviar+'"]').val();
        var path ='{{ path("vacunasEliminar", {'id': 'xx'}) }}';
        path = path.replace("xx", id);

        $.ajax({
            url : path,
            data : {},
            type : 'POST',
            dataType : '',
            success : function(data) {
                $('.listarVacuna').html(data);
            },
            error : function(xhr, status) {
                alert(xhr.message);
            },
            complete : function(xhr, status) {
                swal({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Se ha eliminado correctamente.',
                    showConfirmButton: false,
                    timer: 1500,
                    type: "success",
                    showCancelButton: false,
                    closeOnConfirm: true
                })
            }
        });
    });
</script>