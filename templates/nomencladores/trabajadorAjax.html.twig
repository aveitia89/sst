<table style="font-size: 95%" class="table table-striped table-bordered table-hover" cellspacing="0" id="dataTable" >
    <thead>
    <tr>
        <th style="text-align: center">ID</th>
        <th style="text-align: center">Nombre</th>
        <th style="text-align: center">Apellidos</th>
        <th style="text-align: center">Área</th>
        <th style="text-align: center">Unidad Organizativa</th>
        <th style="text-align: center">Cargo</th>
    </tr>
    </thead>
    <tbody>
    {% for trab in trabajador %}
        <tr style="font-size: 12px;">
            <td style="text-align: center">{{ trab.id }}</td>
            <td style="text-align: center">{{ trab.nombre }}</td>
            <td style="text-align: center">{{ trab.apellidos }} {{ trab.segundoApellido }}</td>
            <td style="text-align: center">{{ trab.idArea.nombre }}</td>
            {% if trab.idUnidadOrganizativa == null %}
                <td></td>
            {% else %}
                <td style="text-align: center">{{ trab.idUnidadOrganizativa.nombre }}</td>
            {% endif %}
            <td style="text-align: center">{{ trab.idCargo.nombre }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% block javascripts %}
<script>
    $(document).ready(function () {
        var t = $('#dataTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                /*'copy', 'csv',*/ 'excel', 'pdf', 'print'
            ],
            /*"bSort" : false,*/
            "language": {
                "infoFiltered": " - filtering from _MAX_ filas",
                "lengthMenu": "Registros: _MENU_  ",
                "sSearch": "Buscar:",
                "sInfo": "Registros del _START_ al _END_ de un total de _TOTAL_ registros",
                "Info": false,
                "oPaginate": {
                    "sFirst": "Primero",
                    "sLast": "Último",
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior"
                    },
                }
            });
        });
</script>
{% endblock %}