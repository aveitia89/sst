{% extends 'base.html.twig' %}

{% block contenido %}
    <div class="box">
        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 style="text-align: center">Comparaciones entre el año {{ annoActual }} vs {{ annoAnterior }}</h1>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-4">
                                <!-- Example DataTables Card-->
                                <div id="chartContainer1" style="height: 370px; max-width: 920px; margin: 0px auto;"></div>
                            </div>
                            <div class="col-lg-4">
                                <!-- Example DataTables Card-->
                                <div id="chartContainer2" style="height: 370px; max-width: 920px; margin: 0px auto;"></div>
                            </div>
                            <div class="col-lg-4">
                                <!-- Example DataTables Card-->
                                <div id="chartContainer3" style="height: 370px; max-width: 920px; margin: 0px auto;"></div>
                            </div>
                            <div class="col-lg-6">
                                <!-- Example DataTables Card-->
                                <div id="chartContainer4" style="height: 370px; max-width: 920px; margin: 0px auto;"></div>
                            </div>
                            <div class="col-lg-6">
                                <!-- Example DataTables Card-->
                                <div id="chartContainer5" style="height: 370px; max-width: 920px; margin: 0px auto;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('etecsa/canvasjs/canvasjs.min.js') }}"></script>
    <script>
        window.onload = function () {
            var chart = new CanvasJS.Chart("chartContainer1", {
                animationEnabled: true,
                theme: "light2", // "light1", "light2", "dark1", "dark2"
                title: {
                    text: "Medios entregados"
                },
                axisY: {
                    title: "Cantidad de medios"
                },
                data: [{
                    type: "column",
                    showInLegend: true,
                    legendMarkerColor: "grey",
                    legendText: "Años Comparativos",
                    dataPoints: [
                        {y: {{medAnnoAnterior}}, label: {{annoAnterior}} },
                        {y: {{medAnnoActual}}, label: {{annoActual}} },
                    ]
                }]
            });
            chart.render();
            var chart = new CanvasJS.Chart("chartContainer2", {
                animationEnabled: true,
                theme: "light2", // "light1", "light2", "dark1", "dark2"
                title: {
                    text: "Accidentes laborales"
                },
                axisY: {
                    title: "Cantidad de accidentes laborales"
                },
                data: [{
                    type: "column",
                    showInLegend: true,
                    legendMarkerColor: "grey",
                    legendText: "Años Comparativos",
                    dataPoints: [
                        {y: {{accAnnoAnterior}}, label: {{annoAnterior}} },
                        {y: {{accAnnoActual}}, label: {{annoActual}} },
                    ]
                }]
            });
            chart.render();
            var chart = new CanvasJS.Chart("chartContainer3", {
                animationEnabled: true,
                theme: "light2", // "light1", "light2", "dark1", "dark2"
                title: {
                    text: "Permiso de seguridad emitidos"
                },
                axisY: {
                    title: "Cantidad de permiso de seguridad"
                },
                data: [{
                    type: "column",
                    showInLegend: true,
                    legendMarkerColor: "grey",
                    legendText: "Años Comparativos",
                    dataPoints: [
                        {y: {{perAnnoAnterior}}, label: {{annoAnterior}} },
                        {y: {{perAnnoActual}}, label: {{annoActual}} },
                    ]
                }]
            });
            chart.render();
            var chart = new CanvasJS.Chart("chartContainer4", {
                animationEnabled: true,
                theme: "light2", // "light1", "light2", "dark1", "dark2"
                title: {
                    text: "Riesgo Laborales"
                },
                axisY: {
                    title: "Cantidad de riesgos laborales"
                },
                data: [{
                    type: "column",
                    showInLegend: true,
                    legendMarkerColor: "grey",
                    legendText: "Años Comparativos",
                    dataPoints: [
                        {y: {{riesgAnnoAnterior}}, label: {{annoAnterior}} },
                        {y: {{riesgAnnoActual}}, label: {{annoActual}} },
                    ]
                }]
            });
            chart.render();
            var chart = new CanvasJS.Chart("chartContainer5", {
                animationEnabled: true,
                theme: "light2", // "light1", "light2", "dark1", "dark2"
                title: {
                    text: "Presupuesto gastado en medios de protección"
                },
                axisY: {
                    title: "Prespuesto gastado"
                },
                data: [{
                    type: "column",
                    showInLegend: true,
                    legendMarkerColor: "grey",
                    legendText: "Años Comparativos",
                    dataPoints: [
                        {y: {{presAnnoAnterior}}, label: {{annoAnterior}} },
                        {y: {{presAnnoActual}}, label: {{annoActual}} },
                    ]
                }]
            });
            chart.render();
        }
    </script>
{% endblock %}
