<table id="dataTable" style="font-size: 90%" class="table table-striped table-bordered table-hover table-responsive" cellspacing="0">
    <thead>
        <tr>
            <th style="width: 50%;text-align: center"><i class="icon_profile"></i>Descripción</th>
            <th style="width: 50%;text-align: center"><i class="icon_profile"></i>Demanda Insatisfecha</th>
        </tr>
    </thead>
    <tbody>
        {% set total = 0 %}
        {% for demanda in resultado %}
            <tr>
                <td style="width: 50%;text-align: center">{{demanda.descripcion}}</td>
                {% set total = total + demanda.demandaInsatisfecha %}
                <td style="width: 50%;text-align: center">{{demanda.demandaInsatisfecha}}</td>
            </tr>
        {% endfor %}
        <tr>
            <td style="width: 50%;text-align: center">Total</td>
            <td style="width: 50%;text-align: center">{{total}}</td>
        </tr>
    </tbody>
</table>
<script>
    $(document).ready(function () {
        var t = $('#dataTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                /*'copy', 'csv',*/ 'excel', 'pdf', 'print'
            ],
            /*"bSort" : false,*/
            "language": {
                "infoFiltered": " - filtering from _MAX_ filas",
                "lengthMenu": "Registros: _MENU_  ",
                "sSearch": "Buscar:",
                "sInfo": "Registros del _START_ al _END_ de un total de _TOTAL_ registros",
                "Info": false,
                "oPaginate": {
                    "sFirst": "Primero",
                    "sLast": "Último",
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior"
                },
            }
        });
    });
</script>