<table id="dataTable" style="font-size: 90%" class="table table-striped table-bordered table-hover table-responsive" cellspacing="0">
    <thead>
        <tr>
            <th style="width: 14%;text-align: center"><i class="icon_profile"></i>Descripción</th>
            <th style="width: 14%;text-align: center"><i class="icon_profile"></i>Cantidad Asignada</th>
            <th style="width: 14%;text-align: center"><i class="icon_profile"></i>Demanda Total</th>
        </tr>
    </thead>
    <tbody>
    {% set totalMP = 0 %}
    {% set totalPorCiento = 0 %}
    {% for medios in medioTrabajador %}
        <tr>
            <td style="width: 14%;text-align: center">{{ medios.descripcion }}</td>
            <td style="width: 14%;text-align: center">{{ medios.cantidad }}</td>
            {% set totalMP = medios.cantidad + totalMP %}
            <td style="width: 14%;text-align: center">{{ medios.cantidadPorciento | number_format(0, '.') }}</td>
            {% set totalPorCiento = medios.cantidadPorciento + totalPorCiento %}
        </tr>
    {% endfor %}
        <tr>
            <td style="width: 14%;text-align: center">Total</td>
            <td style="width: 14%;text-align: center">{{ totalMP }}</td>
            <td style="width: 14%;text-align: center">{{ totalPorCiento | number_format(0, '.') }}</td>
        </tr>
    </tbody>
</table>
<script>
    $(document).ready(function () {
        var t = $('#dataTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                /*'copy', 'csv',*/ 'excel', 'pdf', 'print'
            ],
            /*"bSort" : false,*/
            "language": {
                "infoFiltered": " - filtering from _MAX_ filas",
                "lengthMenu": "Registros: _MENU_  ",
                "sSearch": "Buscar:",
                "sInfo": "Registros del _START_ al _END_ de un total de _TOTAL_ registros",
                "Info": false,
                "oPaginate": {
                    "sFirst": "Primero",
                    "sLast": "Último",
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior"
                },
            }
        });
    });
</script>