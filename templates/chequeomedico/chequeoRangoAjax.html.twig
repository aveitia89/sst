<table id="dataTable" style="font-size: 95%" class="table table-striped table-bordered table-hover table-responsive" cellspacing="0">
    <thead>
        <tr>
            <th style="width: 14%;text-align: center"><i class="icon_profile"></i> Trabajador</th>
            <th style="width: 14%;text-align: center"><i class="icon_profile"></i> Unidad Organizativa</th>
            <th style="width: 14%;text-align: center"><i class="icon_profile"></i> Fecha Chequeo</th>
        </tr>
    </thead>
    <tbody>
    {% set total = 0 %}
    {% for chequeo in chequeoDT %}
        {% set total = total + 1 %}
        <tr>
            <td style="width: 14%;text-align: center">{{ chequeo.idTrabajador.nombre }} {{ chequeo.idTrabajador.apellidos }} {{ chequeo.idTrabajador.segundoApellido }}</td>
            <td style="width: 14%;text-align: center">{{ chequeo.idTrabajador.idArea.nombre }}</td>
            <td style="width: 14%;text-align: center">{{ chequeo.fecha | date('d.m.Y') }}</td>
        </tr>
    {% endfor %}
    </tbody>
    <thead>
        <tr>
            <th style="width: 14%;text-align: center">Total de Chequeos</th>
            <th colspan="2" style="width: 14%;text-align: center">{{total}}</th>
        </tr>
    </thead>
</table>
